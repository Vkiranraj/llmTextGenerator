# LLM Text Generator - Local Development Environment
# Copy this to .env for local development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Base URL for local development
BASE_URL=http://localhost:8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Local SQLite database
DATABASE_URL=sqlite:///./data/url_monitor.db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for local development (CHANGE IN PRODUCTION!)
SECRET_KEY=local-dev-secret-key-change-in-production

# Encryption key for email tokens (optional, uses SECRET_KEY if not set)
ENCRYPTION_KEY=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Gmail SMTP settings (configure with your Gmail app password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@example.com

# =============================================================================
# CRAWLING CONFIGURATION
# =============================================================================

# Crawling settings (using defaults)
MAX_PAGES=20
MAX_DEPTH=1
MAX_CONTENT_PARAGRAPHS=10
REQUESTS_TIMEOUT=10
PLAYWRIGHT_TIMEOUT=60000
CRAWL_DELAY=2
GRACE_PERIOD_CRAWLS=2

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API base URL for frontend (empty for nginx proxy)
REACT_APP_API_BASE_URL=

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API key for AI-enhanced content generation
OPENAI_API_KEY="your api key here"

# OpenAI model settings
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.3
# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Nginx port
NGINX_PORT=80

# Domain name for local development
DOMAIN_NAME=localhost
